<Window x:Class="PenteGame.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PenteGame"
        mc:Ignorable="d"
        Title="MainMenu" Height="450" Width="800">
	<Viewbox>
		<StackPanel>
			<Label Content="Pente" HorizontalAlignment="Center" Margin="10" FontSize="40" FontFamily="Times New Roman"></Label>
			<Button Name="btnStartGame" Content="Start Game" Height="30" Width="70" Margin="10" Click="btnStartGame_Click"></Button>
			<Button Name="btnHelpScreen" Content="Help" Height="30" Width="50" Margin="10" Click="btnHelpScreen_Click"></Button>
			<Button Name="btnQuitGame" Content="Quit" Height="30" Width="30" Margin="10" Click="btnQuitGame_Click"></Button>
		</StackPanel>
	</Viewbox>
</Window>
