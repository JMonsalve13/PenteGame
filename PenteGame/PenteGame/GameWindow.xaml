<Window x:Class="PenteGame.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PenteGame"
        mc:Ignorable="d"
        Title="Game Window" Height="450" Width="800" WindowStartupLocation="CenterScreen">
	<Viewbox>
		<StackPanel>
			<Label Name="lblGameInfo" Height="35"></Label>
			<Border BorderBrush="Black" BorderThickness="2" Margin="0, 0, 0, 10">
				<Grid Height="400" Width="600" Name="grdGameGrid" ShowGridLines="True">
				</Grid>
			</Border>
		</StackPanel>
	</Viewbox>
</Window>
